#!/usr/bin/env bash

set -e

apt-get update
apt-get install -y wget \
                   software-properties-common

wget -nv -O /usr/local/bin/confd https://github.com/kelseyhightower/confd/releases/download/v0.9.0/confd-0.9.0-linux-amd64
chmod +x /usr/local/bin/confd

mkdir /cores

apt-get clean
rm -rf /var/lib/apt/lists/*
